<script>
    var searchButton = document.getElementsByClassName("header-search-icon-container")[0];
    var search = document.getElementsByClassName("header-search")[0];
    var searchInput = document.getElementsByClassName("header-search-input")[0];

    searchButton.addEventListener("click", function(event) {
        search.classList.add("header-search-selected");
        searchInput.focus();
    });
    window.addEventListener("click", function(event) {
        if(!event.target.closest(".header-search")) {
            search.classList.remove("header-search-selected");
        }
    });
</script>